<mvc:View xmlns:core="sap.ui.core" xmlns:ndc="sap.ndc" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="leco.productionorderconfirmation.controller.ProductionOrderConfirmation" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <!-- <Panel id="_IDGenPanel1" headerText="Select Production Order" expandable="false"> -->
            <Panel id="_IDGenPanel1" headerText="{i18n>panelProdorder}" expandable="false">
                <!-- <VBox width="100%" id="inputVbox" class="sapUiResponsiveMargin"> -->
                <VBox id="inputVbox" class="sapUiResponsiveMargin">
                    <HBox id="_IDGenHBox">
                        <Label id="ordernoLbl" text="{i18n>labelOrderno}" vAlign="Middle" textAlign="Center">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData1" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Label>
                        <Input id="ordernoInput" placeholder="{i18n>inputScanorderno}" maxLength="12" width="15rem" liveChange=".onOrderNoChange" type="Number"/>
                        <ndc:BarcodeScannerButton id="_IDGenBarcodeScannerButton1" disableBarcodeInputDialog="true" scanSuccess=".onScanSuccess" scanFail=".onScanError" inputLiveUpdate=".onScanLiveUpdate" dialogTitle="Barcode Scanner" keepCameraScan="true" class="barcodeScannerButtonWithZebraEB">
                            <ndc:customData>
                                <core:CustomData key="targetInputId" value="ordernoInput" writeToDom="true"/>
                            </ndc:customData>
                        </ndc:BarcodeScannerButton>
                    </HBox>
                    <HBox id="_IDGenHBox4">
                        <Button text="{i18n>btnGetdetails}" id="detailsButton" press=".onGetDetails" class="sapUiSmallMarginEnd"/>
                        <Button text="{i18n>btnClear}" id="clearButton" press=".onClear" class="sapUiSmallMarginEnd"/>
                        <Button text="{i18n>btnSave}" id="saveButton" press=".onSave" visible="false" class="sapUiSmallMarginEnd"/>
                        <CheckBox id="finalCheckbox" text="{i18n>chkboxFinalconfirmation}" selected="false" visible="false"/>
                    </HBox>
                </VBox>
            <content/>
            </Panel>

            <Panel id="workorderdataPanel" headerText="{i18n>panelWodata}" expandable="true" expanded="true" visible="false">
                <VBox id="detailsVbox" class="sapUiResponsiveMargin">
                    <HBox id="_IDGenHBox1" justifyContent="Start">
                        <Label id="plantLbl" text="{i18n>labelPlant}" width="6rem" vAlign="Middle" textAlign="Begin"/>
                        <Input id="plantInput" maxLength="4" editable="false" width="10rem"/>
                        <Label id="ordernoReadonlyLbl" text="{i18n>labelOrderNo}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="ordernoReadonlyInput" editable="false" width="10rem"/>
                        <Label id="materialLbl" text="{i18n>labelMatNo}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="materialInput" editable="false" width="10rem"/>
                        <Label id="orderqtyLbl" text="{i18n>labelOrderQty}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="orderqtyInput" editable="false" width="10rem"/>
                    </HBox>
                    <HBox id="_IDGenHBox2">
                        <Label id="ordertypeLbl" text="{i18n>labelOrderType}" width="6rem" vAlign="Middle" textAlign="Begin"/>
                        <Input id="ordertypeInput" editable="false" width="10rem"/>
                        <Label id="strlocationLbl" text="{i18n>labelStrLoc}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="strlocationInput" width="10rem"/>
                        <Label id="uomLbl" text="{i18n>labelUom}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="uomInput" editable="false" width="10rem"/>
                        <Label id="openqtyLbl" text="{i18n>labelOpenQty}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="openqtyInput" editable="false" liveChange=".onOpenQtyChange" width="10rem"/>
                    </HBox>
                    <HBox id="_IDGenHBox3">
                        <Label id="sonoLbl" text="{i18n>labelSoNo}" width="6rem" vAlign="Middle" textAlign="Begin"/>
                        <Input id="sonoInput" editable="false" width="10rem"/>
                        <Label id="soitemLbl" text="{i18n>labelSoItem}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="soitemInput" editable="false" width="10rem"/>
                        <Label id="confqtyLbl" text="{i18n>labelConfQty}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="confqtyInput" editable="false" width="10rem"/>
                        <Label id="confdateLbl" text="{i18n>labelConfDate}" width="6rem" vAlign="Middle" textAlign="Center"/>
                        <Input id="confdateInput" type="Date" width="10rem"/>
                    </HBox>
                </VBox>
                <VBox id="_IDGenVBox" class="sapUiResponsiveMargin">
                    <HBox id="_IDGenHBox7">
                        <Label id="sotextLbl" text="{i18n>labelSoText}" width="6rem" vAlign="Middle" textAlign="Begin"/>
                        <TextArea rows="1" id="sotextInput" cols="100" editable="false"/>
                    </HBox>
                </VBox>
            </Panel>

            <Panel id="serialnumberentryPanel" headerText="{i18n>panelSerialEntry}" expandable="true" expanded="true" visible="false">
                <VBox id="_IDGenVBox1" class="sapUiResponsiveMargin">
                <RadioButtonGroup xmlns="sap.m" columns="3" id="group0">
                    <buttons>
                        <RadioButton text="Single Serial Number" id="button4" select=".onSingleSelect"/>
                        <RadioButton text="Range of Serial Numbers" id="button5" select=".onRangeSelect"/>
                        </buttons>
                </RadioButtonGroup>
                    <HBox id="_IDGenHBox5">
                        <Label id="serialnoLbl1" text="Single Serial No:" width="7rem" vAlign="Middle" textAlign="Center">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData15a1" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Label>
                        <Input id="serialnoInput" width="15rem" placeholder="{i18n>labelSerialNo}">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData16b" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Input>
                        <ndc:BarcodeScannerButton id="_IDGenBarcodeScannerButton2" disableBarcodeInputDialog="true" scanSuccess=".onScanSuccess" scanFail=".onScanError" inputLiveUpdate=".onScanLiveUpdate" dialogTitle="Barcode Scanner" keepCameraScan="{/keepCameraScanOne}" class="barcodeScannerButtonWithZebraEBSerial">
                            <ndc:customData>
                                <core:CustomData key="targetInputId" value="serialnoInput" writeToDom="true"/>
                            </ndc:customData>
                        </ndc:BarcodeScannerButton>
                    </HBox>
                    <HBox id="_IDGenHBox6">
                        <Label id="serialfromLbl" text="Serial No Range:" width="7rem" vAlign="Middle" textAlign="Center">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData17b" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Label>
                        <Input id="serialfromInput" width="12rem" placeholder="{i18n>labelSerialFrom}">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData18c" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Input>
                        <ndc:BarcodeScannerButton id="_IDGenBarcodeScannerButton3" disableBarcodeInputDialog="true" scanSuccess=".onScanSuccess" scanFail=".onScanError" inputLiveUpdate=".onScanLiveUpdate" dialogTitle="Barcode Scanner" keepCameraScan="{/keepCameraScanOne}" class="barcodeScannerButtonWithZebraEBSerial">
                            <ndc:customData>
                                <core:CustomData key="targetInputId" value="serialfromInput" writeToDom="true"/>
                            </ndc:customData>
                        </ndc:BarcodeScannerButton>
                        <Input id="serialtoInput" width="12rem" placeholder="{i18n>labelSerialTo}">
                            <layoutData>
                                <FlexItemData id="_IDGenFlexItemData20c" styleClass="sapUiSmallMarginEnd"/>
                            </layoutData>
                        </Input>
                        <ndc:BarcodeScannerButton id="_IDGenBarcodeScannerButton4" disableBarcodeInputDialog="true" scanSuccess=".onScanSuccess" scanFail=".onScanError" inputLiveUpdate=".onScanLiveUpdate" dialogTitle="Barcode Scanner" keepCameraScan="{/keepCameraScanOne}" class="barcodeScannerButtonWithZebraEBSerial">
                            <ndc:customData>
                                <core:CustomData key="targetInputId" value="serialtoInput" writeToDom="true"/>
                            </ndc:customData>
                        </ndc:BarcodeScannerButton>
                    </HBox>
                    <Button id="addButton" text="{i18n>btnAdd}" press=".onAddSerial"/>
                </VBox>
            </Panel>

            <Panel id="serialnumberdataPanel" headerText="{i18n>labelSerialNumberData}{path: 'serialModel&gt;/records', formatter: '.formatter.serialCount'}" expandable="true" expanded="true" visible="false">
                <Table id="dataTable" items="{serialModel>/records}" class="sapUiResponsiveMargin" width="70%">
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Text id="_IDGenText" text="Serial Number"/>
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Text id="_IDGenText22" text="Serial Status"/>
                        </Column>
                        <Column id="_IDGenColumn3">
                            <Text id="_IDGenText23" text=""/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem">
                            <cells>
                                <Text id="_IDGenText1" text="{serialModel>serialnumber}"/>
                                <Text id="_IDGenText2" text="{serialModel>serialstatus}"/>
                                <Button id="_IDGenButton" icon="sap-icon://delete" press=".onDelete"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>